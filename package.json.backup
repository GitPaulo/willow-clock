{
  "name": "willow-clock",
  "version": "1.0.0",
  "description": "Willow clock app with PixiJS animations",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --reload",
    "start:headless": "xvfb-run -a electron . --enable-unsafe-swiftshader --disable-gpu-sandbox --no-sandbox",
    "start:codespace": "npm run start:headless",
    "prebuild": "cp node_modules/pixi.js/dist/pixi.mjs public/pixi.js",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:windows": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --linux --win",
    "build:full": "electron-builder --mac --win --linux",
    "build:native": "node-gyp rebuild",
    "install:native": "npm install node-addon-api node-gyp",
    "pack": "electron-builder --dir",
    "pack:linux": "electron-builder --linux --dir",
    "pack:windows": "electron-builder --win --dir",
    "clean": "rm -rf dist/ build/",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "pixi.js",
    "clock"
  ],
    \"author\": {\n    \"name\": \"Willow Clock Team\",\n    \"email\": \"team@willowclock.com\"\n  },
  "license": "Apache-2.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "pixi.js": "^8.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.6.2"
  },
  "build": {
    "appId": "com.willow.clock",
    "productName": "Willow Clock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "public/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Willow Clock",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
