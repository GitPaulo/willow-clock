{
  "name": "willow-clock",
  "version": "1.0.0",
  "description": "Willow clock app with PixiJS animations",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --reload",
    "prebuild": "cp node_modules/pixi.js/dist/pixi.mjs public/pixi.js",
    "build:linux": "electron-builder --linux",
    "build:windows": "electron-builder --win",
    "linux": "./deploy/linux.sh",
    "windows": "./deploy/windows.sh",
    "clean": "rm -rf dist/",
    "lint": "eslint ."
  },
  "keywords": [
    "electron",
    "pixi.js",
    "clock"
  ],
  "author": {
    "name": "Paulo",
    "email": "projects.paulo.santos98@gmail.com"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "pixi.js": "^8.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.6.2"
  },
  "build": {
    "appId": "com.willow.clock",
    "productName": "Willow Clock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "public/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Willow Clock",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
