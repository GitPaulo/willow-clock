{
  "name": "willow-clock",
  "version": "1.0.0",
  "description": "Willow clock app with PixiJS animations",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --reload",
    "prebuild": "node scripts/prebuild.js",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:dmg": "npm run prebuild && electron-builder --mac dmg",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "build:all": "npm run prebuild && electron-builder --mac --win --linux",
    "build:mediastate": "powershell -File src\\audio\\lib\\windows\\build-mediastate-windows.ps1",
    "lint": "eslint .",
    "test:music": "node ./tests/os-audio.js"
  },
  "keywords": [
    "electron",
    "pixi.js",
    "clock"
  ],
  "author": {
    "name": "Paulo",
    "email": "projects.paulo.santos98@gmail.com"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "dbus-next": "^0.10.2",
    "js-yaml": "^4.1.0",
    "pixi.js": "^8.8.1"
  },
  "optionalDependencies": {
    "@nodert-win10-20h1/windows.media.control": "^0.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.6.2"
  },
  "build": {
    "appId": "com.willow.clock",
    "productName": "Willow Clock",
    "directories": {
      "output": "dist"
    },
    "beforeBuild": "scripts/before-build.js",
    "files": [
      "main.js",
      "public/**/*",
      "src/**/*",
      "bin/**/*",
      "node_modules/**/*"
    ],
    "icon": "public/assets/icons/app-icon-512.png",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerLanguages": [
        "en_US"
      ],
      "language": "1033"
    }
  }
}
